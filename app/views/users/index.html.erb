<% if @users.empty? %>
   <h1>No users</h1>
<% else %>
    <ul class='users_list'>
      <% @users.each do |user| %>
        <li class='user'>
         <a href="<%=user_path(user.id)%>"> 
          <img src="<%= user.photo %>"  alt="<%= user.name %>" />
          <div>
          <h3><%= user.name %></h3>
          <p>Number of Posts: <%= user.posts_counter %></p>
          </div>
         </a>
        </li>
      <% end %>  
    </ul>
<% end %>