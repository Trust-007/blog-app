<% if @users.empty? %>
   <h1>No users</h1>
<% else %>
    <ul class='users_list'>
      <% @users.each do |user| %>
        <li class='user_card'> 
          <img src=<% user.photo %> />
          <div>
            <h3><%= user.name %></h3>
            <p>Number of Posts: <%= user.posts_counter %></p>
          </div>
        </li>
      <% end %>  
    </ul>
<% end %>